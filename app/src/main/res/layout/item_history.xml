<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_history"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/table_elements_padding"
    android:paddingBottom="@dimen/table_elements_padding">

    <TextView
        android:id="@+id/text_view_history_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textAlignment="center"
        android:textSize="@dimen/table_text_size"/>

    <TextView
        android:id="@+id/text_view_history_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textAlignment="center"
        android:textSize="@dimen/table_text_size"/>

</LinearLayout>